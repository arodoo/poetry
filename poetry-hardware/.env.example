# Server Configuration
PORT=3001
NODE_ENV=development

# Hardware Mode
MOCK_MODE=true
LOG_LEVEL=debug

# Serial Ports (auto-detected if empty)
USB_TTL_PORT=
FINGERPRINT_PORT=

# Relay Configuration
RELAY_CHANNELS=4
RELAY_DEFAULT_DELAY_MS=500

# API Security (add when integrating with backend)
API_KEY=
ALLOWED_ORIGINS=http://localhost:8080
