<?xml version="1.0"?>
<!-- File: checkstyle.xml
Purpose: Checkstyle configuration that references the centralized
code-standards.config.json for line length limits. Enforces Java
backend style rules consistently with the repository standards.
All Rights Reserved. Arodi Emmanuel -->
<!DOCTYPE module PUBLIC
    "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
    "https://checkstyle.org/dtds/configuration_1_3.dtd">
<module name="Checker">
  <module name="LineLength">
    <property name="max" value="100"/>
    <property name="ignorePattern"
      value="^\s*//|^\s*\*|https?://|^\s*package\s|^\s*import\s"/>
  </module>
  <module name="TreeWalker">
    <module name="UnusedImports"/>
    <module name="RedundantImport"/>
    <module name="NeedBraces"/>
    <module name="WhitespaceAfter"/>
    <module name="WhitespaceAround"/>
  </module>
</module>
