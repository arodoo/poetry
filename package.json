{
  "name": "poetry-repo-tools",
  "private": true,
  "version": "0.1.0",
  "description": "Repository-wide tooling for formatting and checks",
  "scripts": {
    "prepare": "husky install",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "npm run lint:frontend",
    "lint:frontend": "npm --prefix poetry-frontend run lint",
    "typecheck": "npm --prefix poetry-frontend run typecheck",
    "test": "npm --prefix poetry-frontend run test && poetry-backend/mvnw -q test",
    "build": "npm --prefix poetry-frontend run build && poetry-backend/mvnw -q -DskipTests package",
    "openapi:validate": "redocly lint docs/api/openapi-v1.yaml",
    "sdk:check": "node tools/ci/check-openapi-hash.mjs",
    "sdk:sync": "node tools/ci/update-openapi-hash.mjs",
    "max-lines:check": "node tools/ci/check-lines.mjs"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css,md,json,yaml,yml}": [
      "prettier --write"
    ],
    "poetry-frontend/**/*.{js,jsx,ts,tsx}": [
      "npm --prefix poetry-frontend run lint -- --max-warnings=0"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@redocly/cli": "^1.28.3",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3"
  }
}
